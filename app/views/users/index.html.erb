<div class="container">
  <h1>All Users</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>User Name</th>
        <th>Email</th>
        <th>Download(csv)</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td>
           <%= link_to 'Download Orders', download_orders_csv_path(user_id: user.id,format: :csv), class: 'btn btn-primary' %> 
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
